CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98
TARGET = ex02
SRCS =	main.cpp \
		src/Base.cpp
OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)
	@echo "																									"	
